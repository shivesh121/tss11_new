					<td>Full Name</td>
					<td>Fee</td>
					<td>City</td>
					<td>State</td>
				</tr>
				<tr ng-repeat="row in allStu">
					<td ng-bind="$index+1"></td>
					<td ng-bind="row.full_name"></td>
					<td ng-bind="row.fee"></td>
