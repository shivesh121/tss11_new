<div class="modal fade" id="addModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h2>Add New Student</h2>
				<pre ng-bind="student|json"></pre>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label>Full Name</label>
					<input ng-model="student.full_name" type="text" placeholder="Full Name" class="form-control">
				</div>
				<div class="form-group">
					<label>Fee</label>
					<input ng-model="student.fee" type="text" placeholder="Full Name" class="form-control">
				</div>
				<div class="form-group">
					<label>City</label>
					<!-- <input ng-model="user.full_name" type="text" placeholder="Full Name" class="form-control"> -->
					<select class="form-control" ng-model="student.city" ng-options="x.id as x.name for x in cities">
						<option value="">Select</option>
					</select>
				</div>
				<div class="form-group">
					<label>State</label>
					<!-- <input ng-model="user.full_name" type="text" placeholder="Full Name" class="form-control"> -->
					<select class="form-control" ng-model="student.state" ng-options="y.id as y.name for y in states">
						<option value="">Select</option>
					</select>
				</div>
				
			</div>
			
			<div class="modal-footer">
				<img src="/image/2.gif" ng-show="preShow"/>
				<button class="btn btn-success" ng-click="add()">Add</button>
				<button data-dismiss="modal" class="btn btn-danger">Close</button>
			</div>
		</div>
