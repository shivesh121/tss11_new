<div class="container" style="min-height: 500px; height: auto; margin-top: 100px;">
	<div class="well">
		
		<h2>Product In Your Cart</h2>
		<a href="/cart/clear" class="btn btn-warning">Clear Cart</a>
	
	</div>
	<table class="table table-hover table-bordered">
		<tr>
			<th>S.No.</th>
			<th>Product Name</th>
			<th>Price</th>
		</tr>
		<% pro.forEach(function(res, i){ %>
			<tr>
				<td><%= i+1; %></td>
				<td><%= res.product_name; %></td>
				<td><%= res.price; %></td>
	<% }) %>
	</table>
	
</div>


