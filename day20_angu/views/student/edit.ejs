<script type="text/javascript">
	$(document).ready(function(){
		$("#openEditModal").click();
	});	
</script>
<div class="container" style="min-height: 500px; height: auto; margin-top: 100px;">
	<a href="#" id="openEditModal" data-target="#editModal" data-toggle="modal"></a>
	<div class="well">
		<h2>All Student</h2>
		<h4>Add New Student <button class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add</button></h4>
	</div>
	<div class="modal fade" id="editModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h3>Edit Student</h3>
				</div>
				<div class="modal-body">
					<form action="/edit/<%= stu.id %>" method="post">
						<div class="form-group">
							<label>Full Name</label>
							<input type="text" placeholder="Full Name" name="full_name" class="form-control" value="<%= stu.full_name %>">
						</div>
						<div class="form-group">
							<label>Age</label>
							<input type="text" placeholder="Full Name" value="<%= stu.age %>" name="age" class="form-control">
						</div>
						<div class="form-group">
							<label>City</label>
							<select name="city" class="form-control">
								<option>Select</option>
								<% city.forEach(function(res, i){ %>
									<% if(res.name == stu.city){ %> 
									<option selected="selected"><%= res.name %></option>
									<% }else { %>
									<option><%= res.name %></option>
									<% } %>
								<% }) %>
							</select>
						</div>
						<div class="form-group">
							<input type="submit" value="Update" class="btn btn-success">
							<a href="/" class="btn btn-danger">Close</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>


</div>


